            .grille {
                display: grid;
                grid-template-columns: repeat(3,1fr);
                grid-gap: 80px;
            }
            .fixe-form {
                display: block;
                position: sticky;
                top: 10px;
            }
        </style>
    </head>
    <body>
    <nav class="navbar navbar-dark bg-primary mb-3">
        <a href="#" class="navbar-brand mb-0 h1">Ma petite entreprise</a>
    </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
